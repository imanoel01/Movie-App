@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>



@{
    var rating = @Model.Count > 2 ? "Popular" : null;

}

<h2 class="@rating"></h2>

@if (Model.Count() < 0)
{
    <h3> There are no Customer</h3>
}


else
{
    @Html.ActionLink("Create New Customer", "New", "Customers", new { @class="btn btn-primary m-b-15"});

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>

                    <td>@Html.ActionLink(@customer.FullName, "Edit", "Customers", new { id = @customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
                </tr>

            }
        </tbody>
    </table>


}

